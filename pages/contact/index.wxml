<view class='global'>
  <view class="Location">
    <view class="Location_logo">
      <image src="{{logo}}"></image>
    </view>
    <view class="Location_address">
      <view class="Location_address_1">{{title}}</view>
      <view class="Location_address_2">{{introduce}}</view>
    </view>
  </view>
  <view class="Location_location">
    <view class="Location_location_1">
      <view class="Location_location_1_1">
        <image src="../../img/Location.png"></image>
      </view>
      <view class="Location_location_1_2">{{address}}</view>
    </view>
    <view class="Location_location_2">
      <!-- <map id="map" longitude="112.9946422600" latitude="28.1001683300" scale="14" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange"  show-location style="width: 100%; height: 300px;border-radius:50px"></map> -->
       <map
      id="myMap"
      style="width: 100%; height: 300px;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      covers="{{covers}}"
      show-location
    ></map>
    </view>
  </view>
  <view class="phone">
    <view class="phone_1">电话咨询</view>
    <view class="phone_2">
      <view class="phone_2_1" bindtap="btn_phone" data-phone="{{telephone}}">
        <view class="phone_2_2">
          {{telephone}}
        </view>
        <view class="phone_2_3">
          <image src="../../img/phone.png"></image>
        </view>
      </view>
    </view>
  </view>
  <view class="phone">
    <view class="phone_1">工作时间</view>
    <view class="phone_2">{{workTime}}</view>
  </view>
</view>