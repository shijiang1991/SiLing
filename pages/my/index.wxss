.title {
  height: 124pt;
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #09f;
  border-bottom: 8pt solid #f4f4f4;
}

.title_picture {
  width: 30%;
  height: 124pt;
  display: flex;
  justify-content: center;
  align-items: center;
}

.title_picture_1 {
  height: 53pt;
  width: 53pt;
  overflow: hidden;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.title_picture_1 image {
  height: 53pt;
  width: 53pt;
}

.title_name {
  width: 70%;
}

.title_name_c {
  height: 124pt;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.title_name_1 {
  font-size: 14pt;
  color: #fff;
}

.title_name_2 {
  padding-top: 2%;
  font-size: 12pt;
  color: #fff;
}

.content {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80pt;
}

.content_1 {
  width: 96%;
  height: 60pt;
  border-radius: 5pt;
  background: #fff;
  box-shadow: 0px 0px 10px 10px #f4f4f4;
  display: flex;
  flex-direction: row;
}

.content_1_1 {
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.content_1_2 image {
  width: 24pt;
  height: 24pt;
}

.content_1_3 {
  font-size: 10pt;
}

.count_juan {
  height: 40pt;
  display: flex;
  justify-content: center;
  align-items: center;
}

.countJuan {
  height: 35pt;
  width: 96%;
  box-shadow: 0px 0px 10px 10px #f4f4f4;
  border-radius: 5pt;
  display: flex;
  flex-direction: row;
  justify-items: center;
  align-items: center;
}

.count_juan_1 {
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-left: 1pt solid #f4f4f4;
  border-right: 1pt solid #f4f4f4;
}

.count_juan_1_1 {
  padding-left: 5%;
  width: 50%;
  font-size: 10pt;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.count_juan_1_1 image {
  margin-top: 3pt;
  height: 18pt;
  width: 18pt;
}

.count_juan_2 {
  width: 50%;
}

.count_juan_1_2 {
  color: #f05a49;
}
