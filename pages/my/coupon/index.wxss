.title {
  height: 24pt;
  border-bottom: 1px solid #f4f4f4;
  display: flex;
  align-items: center;
  padding-left: 3%;
  color: #f05a49;
}

.content {
  padding: 3%;
}

.content_1 {
  height: 44pt;
  box-shadow: 1px 1px 10px #f4f4f4;
  display: flex;
  flex-direction: row;
}

.content_1_1 {
  height: 100%;
  background: rgb(248, 81, 81);
  color: #fff;
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.content_1_1_1 text{
  font-size: 14pt;
  font-weight: bold;
}
.content_1_1_2{
  font-size: 10pt;
}
.content_1_2{
  width: 75%;
  padding-left: 3pt;
}
.content_1_2_1{
  height: 60%;
}
.content_1_2_2{
  display: flex;
  flex-direction: row;
  width: 100%;
}
.content_1_2_2_1{
  font-size: 10pt;
  color: rgb(151, 149, 149);
  width: 70%;
}
.content_1_2_2_2{
  font-size: 10pt;
  color: rgb(248, 81, 81);
  width: 30%;
  text-align: right;
}
.content_1_2_2_2 text{
   border:1px solid rgb(248, 81, 81);
   border-radius: 8pt;
   padding: 1pt;
}
.flex{
  height: 8pt;
}