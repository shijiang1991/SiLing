.title {
  height: 48rpx;
  border-bottom: 2rpx solid #f4f4f4;
  display: flex;
  align-items: center;
  padding-left: 3%;
  color: #f05a49;
  font-size: 28rpx;
}

.content {
  padding: 3%;
}

.content_1 {
  height: 88rpx;
  box-shadow: 2rpx 2rpx 20rpx #f4f4f4;
  display: flex;
  flex-direction: row;
}

.content_1_1 {
  height: 100%;
  background: rgb(248, 81, 81);
  color: #fff;
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.content_1_1_1 text{
  font-size: 28rpx;
  font-weight: bold;
}
.content_1_1_2{
  font-size: 20rpx;
}
.content_1_2{
  width: 55%;
  padding-left: 6rpx;
}
.content_1_2_1{
  height: 60%;
  font-size: 32rpx;
}
.content_1_2_2{
  display: flex;
  flex-direction: row;
  width: 100%;
}
.content_1_2_2_1{
  font-size: 20rpx;
  color: rgb(151, 149, 149);
}
.content_1_3{
  font-size: 28rpx;
  font-weight: bold;
  color: rgb(248, 81, 81);
  display: flex;
  justify-content: center;
  align-items: center;
}
.content_1_3_1{
  border:1px solid rgb(248, 81, 81);
   border-radius: 16rpx;
   padding: 2rpx;
